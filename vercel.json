{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/generate-payment-link/:id",
      "dest": "app.js",
      "methods": ["POST"],
      "config": {
        "function": {
          "maxDuration": 60000 
        }
      }
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ]
}
